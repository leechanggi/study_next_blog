generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Post {
  post_id   Int       @id @default(autoincrement())
  title     String
  content   String    @db.LongText
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  tags      String?
  imgSrc    String?
}
